@model ResetPasswordViewModel

<br /><br />
<div class="container">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header text-center">
                    <h4 class="text-primary">Reset Password</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group row text-danger" asp-validation-summary="All"></div>
                        <div class="form-group row">
                            <label class="col-sm-3" asp-for="Password"></label>
                            <input placeholder="Enter New Password" asp-for="Password" class="form-control col-sm-9" />
                            <div class="col-sm-2"></div>
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3" asp-for="ConfirmPassword"></label>
                            <input placeholder="Confirm Password" asp-for="ConfirmPassword" class="form-control col-sm-9" />
                            <div class="col-sm-3"></div>
                            <span class="text-danger col-sm-9" asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <div class="form-group row justify-content-center">
                            <button class="btn btn-primary w-25">Reset</button>
                        </div>
                        <input hidden asp-for="email" />
                        <input hidden asp-for="token" />
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>
<br /><br /><br />