@model IList<Assignment>;

<br /><br />
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3 class="text-primary">Assignments</h3>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-12">
            @foreach (var assignment in Model)
            {
                <div class="card">
                    <div class="card-body">
                        <h4 class="text-secondary card-text">@assignment.Title</h4><br />
                        <h5 class="text-primary card-text">Subject :- @assignment.Subject.Name</h5><br />
                        <p card-text>@assignment.Description</p><br />
                        <div class="text-muted">Assigned By :- @assignment.Faculty.Name</div>
                        <br />
                        <div class="row justify-content-center">
                            <a asp-action="SubmitAssignment" asp-controller="Student" class="btn btn-primary w-25"
                               asp-route-Id="@assignment.Id">My Submission</a>
                        </div> 
                    </div>
                </div>
                <br />
            }
        </div>
    </div>
</div>