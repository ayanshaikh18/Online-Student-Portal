@model IEnumerable<Result>;

<br /><br />
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <a class="h4" asp-action="Result"><i class="fa fa-arrow-left"></i>&nbsp;Back </a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 text-center">
            <h4 class="text-primary">Name :- @ViewBag.Name</h4><br />
            <h5>Exam :- @ViewBag.Exam</h5>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    @if (Model.Count() == 0)
                    {
                        <div class="jumbotron">
                            <h3><b>Result is not uploaded in any subject yet</b></h3>
                        </div>
                    }
                    else
                    {
                        <table class="table">
                            <tr>
                                <th>Subject</th>
                                <th>Marks</th>
                            </tr>
                            @foreach (var result in Model)
                            {
                                <tr>
                                    <td>@result.Subject.Name</td>
                                    <td>@result.Marks</td>
                                </tr>
                            }
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<br /><br />