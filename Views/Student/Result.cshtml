<div class="container">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="card text-center">
                <div class="card-header">
                    <h4 class="text-secondary">View Result</h4>
                </div>
                <div class="card-body">
                    <table class="table">
                        @foreach (var Exam in Enum.GetValues(typeof(ExamType)))
                        {
                            <tr>
                                <td>
                                    <a class="h5" asp-route-Exam="@Exam" asp-action="Result1" type="submit">@Exam.ToString()</a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>
