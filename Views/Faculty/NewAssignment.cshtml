@model StudentPortal.ViewModels.NewAssignmentViewModel;

<br /><br />
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <a class="h4" asp-action="Assignments"><i class="fa fa-arrow-left"></i>&nbsp;Back </a>
        </div><br /><br /><br />
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <div class="card">
                <div class="card-header"><h4 class="text-primary">New Assignment</h4></div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group row">
                            <label asp-for="Title" class="col-sm-2"></label>
                            <input placeholder="Enter Title" asp-for="Title" class="form-control col-sm-10" />
                            <div class="col-sm-2"></div>
                            <span class="col-sm-10 text-danger" asp-validation-for="Title"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Description" class="col-sm-2"></label>
                            <textarea placeholder="Enter Description" class="form-control col-sm-10" cols="40" rows="6" asp-for="Description"></textarea>
                            <div class="col-sm-2"></div>
                            <span class="col-sm-10 text-danger" asp-validation-for="Description"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for="SubjectId" class="col-sm-2"></label>
                            <select asp-for="SubjectId" class="custom-select col-sm-10">
                                <option value="Select Subject">--Select Subject--</option>
                                @foreach (var sub in Model.AllSubjects)
                                {
                                    <option value="@sub.Subject.Id">@sub.Subject.Name</option>
                                }
                            </select>
                            <div class="col-sm-2"></div>
                            <span class="col-sm-10 text-danger" asp-validation-for="SubjectId"></span>
                        </div>
                        <div class="form-group row justify-content-center">
                            <button class="btn btn-primary w-25">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-1"></div>
    </div>
</div>
<br /><br />