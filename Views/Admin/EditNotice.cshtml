@model StudentPortal.ViewModels.NoticeViewModel;
@{
    ViewData["Title"] = "Edit Notice";
}

<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <form enctype="multipart/form-data" method="post" asp-route-id="@ViewBag.Id">
                <div class="card">
                    <div class="card-header">
                        <h3>Edit Notice</h3>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="All" class="text-danger row"></div>
                        <div class="form-group row">
                            <label class="col-sm-3" asp-for="Title"></label>
                            <input class="form-control col-sm-9" asp-for="Title" />
                            <span class="col-sm-3"></span>
                            <span class="col-sm-9 text-danger" asp-validation-for="Title"></span>
                        </div>
                        <br />
                        <div class="form-group row">
                            <label class="col-sm-3" asp-for="Description"></label>
                            <textarea class="form-control col-sm-9" cols="40" rows="5" asp-for="Description"></textarea>
                            <span class="col-sm-3"></span>
                            <span class="col-sm-9 text-danger" asp-validation-for="Description"></span>
                        </div>
                        <br />
                        <div class="form-group row">
                            <label class="col-sm-3">Current File : </label>
                            <div class="col-sm-9">
                                <a href="~/files/@ViewBag.FilePath">@Model.FileName</a>
                            </div>
                        </div>
                        <div class="form-group row custom-file">
                            <input class="form-control col-sm-12 custom-file-input" asp-for="File" />
                            <label class="custom-file-label col-sm-12">Choose File...</label>
                        </div>
                        <br /><br />
                        <div class="form-group row">
                            <label class="col-sm-3" asp-for="FileName"></label>
                            <input class="form-control col-sm-9" asp-for="FileName" />
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn-primary btn-lg" type="submit">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<br />
<br />

@section Scripts{
    <script>
        $(document).ready(function () {
            $(".custom-file-input").on("change", function () {
                var fnm = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fnm);
            })
        })
    </script>
}
